WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    ForthWindow:
<MainWindow>:
    
    name:"Login"

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Username"
            
            TextInput:
                id: usern 
                multiline: False
                

            Label:
                text: "Password"

            TextInput:
                id: passw
                multiline: False
                password: True
            
            

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if  passw.text == "" and usern.text == "" else root.show_error("Incorrect password")

    
    
        
<SecondWindow>:

    name: "second"
    canvas:
        
        Color: 
            rgb: (0.41,0.41,0.41,1.0)

        Rectangle:
            
            pos: self.pos
            size: self.size

    GridLayout:
        cols:1
        size: root.width  , root.height 
        padding: 100
        

    

        GridLayout:
            cols:2
            
            
            Button:
                id: total_display
                text: str(root.coin123)
                background_color: (0.0,0.0,0.0,1.0)
                
            Button:
                text: "Allocation Breakdown"  
                background_color: (0.0,0.0,0.0,1.0)
                on_press: root.load_chart()
                
                    
                
            Button:
                text: "Update Total"
                background_color: (0.0,0.0,0.0,1.0)
                on_press: root.updateVal()

            Button:
                text:"More Detail"
                background_color: (0.0,0.0,0.0,1.0)
                on_press: app.root.current = "third"
        

<ThirdWindow>:
    name:"third"
    canvas.before:
        Color: 
            rgb:(0.41,0.41,0.41,1.0)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols:1
        size: root.width  , root.height 
        padding: 100
        

    

        GridLayout:
            cols:2
            
            
            Button:
                id: total_display
                background_color: (0.0,0.0,0.0,1.0)
                text: "Candle Chart"
                on_release: root.show_popup_candle()
                
            Button:
                background_color: (0.0,0.0,0.0,1.0)
                text: "Price Prediction" 
                on_release: root.show_popup_pricepred()

                  
                
            Button:
                text: "Update Coins"
                background_color: (0.0,0.0,0.0,1.0)
                on_release: root.show_popup2()
                

            Button:
                text:"Coin Breakdown"
                background_color: (0.0,0.0,0.0,1.0)
                on_release: root.show_popup() 
            
            Button:
                text:"Back"
                background_color: (0.0,0.0,0.0,1.0)
                on_release: app.root.current = "second"
            
            Button:
                text: "News, Market Sentiment & More"
                background_color: (0.0,0.0,0.0,1.0)
                on_release: app.root.current ="fourth"

                

            
                

<ForthWindow>:
    name:"fourth"



    GridLayout:
        cols:1
        
        
        

    


        GridLayout:
            
            cols:4
            rows:2
            

            RelativeLayout:
                canvas:
                    Color:
                        rgb: 0, 0, 0
                    Rectangle:
                        size: root.width, root.height
                ToggleButton:
                    size_hint: None, None
                    size: 0.25 * root.width, 0.25 * root.height
                    pos: 0.00 * root.width, 0.00 * root.height
                    text: 'News'
                    group: 'geometry'
                    on_release: root.showWindowNews()

        
            RelativeLayout:
                canvas:
                    Color:
                        rgb: 0, 0, 0
                    Rectangle:
                        size: root.width, root.height
                ToggleButton:
                    id: btnb2
                    size_hint: None, None
                    size: 0.25 * root.width, 0.25 * root.height
                    pos: 0.00 * root.width, 0.00 * root.height
                    text: 'Market Sentiment' 
                    group: 'geometry'
                    on_release: root.marketsent()
            

            RelativeLayout:
                canvas:
                    Color:
                        rgb: 0, 0, 0
                    Rectangle:
                        size: root.width, root.height
                ToggleButton:
                    size_hint: None, None
                    size: 0.25 * root.width, 0.25 * root.height
                    pos: 0.00 * root.width, 0.00 * root.height
                    
                    text: 'PortfolioPred'
                    group: 'geometry'
                    on_release: root.show_porfolio_pred()

            
        
            RelativeLayout:
                canvas:
                    Color:
                        rgb: 0, 0, 0
                    Rectangle:
                        size: root.width, root.height
                ToggleButton:
                    id: btnb
                    size_hint: None, None
                    size: 0.25 * root.width, 0.25 * root.height
                    pos: 0.00 * root.width, 0.00 * root.height
                    text: 'Current Value' 
                    group: 'geometry'
                    on_release: root.searchButton1(CryptoInput.text)
            

        RelativeLayout:
            Label:
                text: "Password"

            TextInput:
                id: CryptoInput
                multiline: False
        RelativeLayout:
            Button:
                text: "Update"
                on_release:
                    root.apiCall1(CryptoInput.text)
        RelativeLayout:
            Button:
                text: "Back"
                on_release:
                    app.root.current = "third" 


            
            
<Table>:
    name: "table"
    orientation: 'horizontal'
    spacing: 40
    spalte1_SP: 'spalte1'
    spalte2_SP: 'spalte2'
    spalte3_SP: 'spalte3'
    
    Label:
        id: SP1
        text: root.spalte1_SP
    Label:
        id: SP2
        text: root.spalte2_SP
    Label:
        id: SP3
        text: root.spalte3_SP    
  
<Table2>:
    name: "Table2"
    orientation: 'horizontal'
    spacing: 40
    item1: 'item1'
  
    
   

    Label:
        text_size: root.width, None
        size: self.texture_size
        id: SP1
        text: root.item1
  
   
<Table3>:
    name: "Table3"
    orientation: 'horizontal'
    spacing: 40
    item12: 'item12'
    item22: 'item22'
  
    
   

    Label:
        
        id: SP1
        text: root.item12
    Label:
        
        text : root.item22
        id: SP2


<Portfolio_pred>:
    name: "Portfolio_pred"
    orientation: "vertical"
    
    BoxLayout: 
        RecycleView:
            id: rv_id3
            data: root.getcoinvalues()
            viewclass: 'Table3'   
            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None  
                width: self.minimum_width
                height: self.minimum_height 
                orientation: 'vertical'
            
           
<FifthWindow>:

    name: "fifth"
    orientation: "vertical"
    on_pre_enter: self.refresh_RV()
    BoxLayout: 
        RecycleView:
            id: rv_id
            data: root.getItems()
            viewclass: 'Table'   
            RecycleBoxLayout:
                default_size: None, dp(20)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height 
                orientation: 'vertical'
            
<popup6>:
    name: "sixth"
    orientation: "vertical"
    on_pre_enter: self.refresh_RV()
    BoxLayout: 
        RecycleView:
            id: rv_id1
            data: root.newslist()
            viewclass: 'Table2'   
            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None  
                width: self.minimum_width
                height: self.minimum_height 
                orientation: 'vertical'
                    
          
<CandlePop>:
    GridLayout:
        cols:1
    
    

        GridLayout:
            cols:2

            Label:
                text: "Coin" 

            TextInput:
                id: coinid
                multiline: False
            
        
        Button:
            text: "Load"
            on_release:
                root.candleChart1(coinid)


<PricePred>:
    GridLayout:
        cols:1
    
    

        GridLayout:
            cols:2

            Label:
                text: "Coin" 

            TextInput:
                id: coinid
                multiline: False
            
        
        Button:
            text: "Load"
            on_release:
                root.load_lstm(coinid)
        

                

<AddRemove>:


    GridLayout:
        cols:1
    
    

        GridLayout:
            cols:2

            Label:
                text: "Coin you want to update" 

            TextInput:
                id: coinid
                multiline: False
            
            Label:
                text: "Your total amount"
            
            TextInput:
                id: amountid 
                multiline: False
        
        Button:
            text: "add"
            on_release:
                root.add(coinid,amountid)
        Button:
            text: "remove"
            on_release:
                root.remove(coinid,amountid)


            
            



            






